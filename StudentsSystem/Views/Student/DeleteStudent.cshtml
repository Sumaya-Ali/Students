@model ObjectLayer.Student;
@{
    ViewData["Title"] = "Delete Student";
}
<div class="text-center">
    <h1 class="display-4 text-danger">Delete Student</h1>
    <br />
    <form method="post" class="text-secondary" asp-action="Delete">
        <input asp-for="Id" hidden />
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="FirstName">First Name</label>
                <input type="text" disabled class="form-control" asp-for="FirstName" placeholder="First Name">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="LastName">Last Name</label>
                <input type="text" disabled class="form-control" asp-for="LastName" placeholder="Last Name">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="Email">Email</label>
                <input type="email" disabled class="form-control" asp-for="Email" placeholder="Email">
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Telephon">Telephon</label>
                <input type="tel" disabled class="form-control" asp-for="Telephon" placeholder="Telephon">
            </div>
            <div class="form-group col-md-4">
                <label asp-for="BirthDay">Birth Date</label>
                <input type="date" disabled class="form-control" asp-for="BirthDay" placeholder="Birth Date">
            </div>

        </div>
        <button type="submit" class="btn btn-warning">Delete</button>
        <a asp-controller="Student" asp-action="GetAllStudents" class="btn btn-secondary">Back to List</a>
    </form>
</div>
